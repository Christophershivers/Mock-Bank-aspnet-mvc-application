@model The_Bank_of_Cardinal.Models.PayeeModel
@using Microsoft.AspNetCore.Identity
@using The_Bank_of_Cardinal.Areas.Identity.Data

@inject SignInManager<CardinalUser> SignInManager
@inject UserManager<CardinalUser> UserManager

@{
    ViewData["Title"] = "AddPayee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddPayee</h1>

<h4>PayeeModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPayee">
